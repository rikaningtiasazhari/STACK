	cout<<"==================================="<<endl;
	cout<<"\n1. Push "<<endl;
	cout<<"2. Pop "<<endl;
	cout<<"3. Keluar"<<endl;
	cout<<"Pilihan : "; 
	cin>>pil;
	cout<<endl;

