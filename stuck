#include<iostream>
using namespace std;

struct node{
	int data;
	node *selanjutnya;
};

node *palingdepan = NULL;

bool isempty(){
	if (palingdepan == NULL){
		return 1;
	}
	else {
		return 0;
	}
}

void push (float isi){
	node *baru = new node;
	baru->data = isi;
	baru->selanjutnya = NULL;
	if(isempty()){
		palingdepan = baru;
		palingdepan->selanjutnya = NULL;
	}else{
		baru -> selanjutnya = palingdepan;
		palingdepan = baru;
	}
}

void pop (){
	node *copot = new node;
	if(isempty()){
		cout << "Tidak ada stack";
	}else{
		copot = palingdepan;
		palingdepan = palingdepan->selanjutnya;
		delete copot;
	}
}

void print (){
	node *bantu = palingdepan;
	if (isempty () == 0){
		while (bantu != NULL){
		cout<< bantu ->data <<" ";
		bantu = bantu ->selanjutnya;
		}
	}
	else{
		cout<<"Tidak ada stack \n";

	}
}

